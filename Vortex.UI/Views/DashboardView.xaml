<Page x:Class="Vortex.UI.Views.DashboardView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:vm="clr-namespace:Vortex.UI.ViewModels"
  Title="Dashboard"
  Background="Transparent">

<Border Background="#000000" CornerRadius="0,0,8,8">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="390"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="{DynamicResource SystemInformationDashboard}" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Foreground="White"
                   FontFamily="Consolas"
                   Margin="0,0,0,20"/>

        <!-- Top Section: Hardware (Left) and Software (Right) -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Hardware Information (Left) -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="{DynamicResource HardwareInformation}" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Foreground="White"
                           FontFamily="Consolas"
                           Margin="0,0,0,8"/>
                
                <DataGrid x:Name="HardwareDataGrid"
                          Style="{StaticResource VortexDataGridStyle}"
                          ItemsSource="{Binding HardwareItems}"
                          RowBackground="#000000"
                          AlternatingRowBackground="#0a0a0a"
                          Height="Auto"
                          AutoGenerateColumns="False">
                    <DataGrid.ContextMenu>
                        <ContextMenu Style="{StaticResource VortexDataGridContextMenuStyle}">
                            <MenuItem Header="{DynamicResource CopyValue}" Click="CopyValue_Click"/>
                            <MenuItem Header="{DynamicResource CopyRow}" Click="CopyRow_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{DynamicResource Property}" Binding="{Binding Property}" Width="200"/>
                        <DataGridTextColumn Header="{DynamicResource Value}" Binding="{Binding Value}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

            <!-- Software Information (Right) -->
            <StackPanel Grid.Column="2">
                <TextBlock Text="{DynamicResource SoftwareInformation}" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Foreground="White"
                           FontFamily="Consolas"
                           Margin="0,0,0,8"/>
                
                <DataGrid x:Name="SoftwareDataGrid"
                          Style="{StaticResource VortexDataGridStyle}"
                          ItemsSource="{Binding SoftwareItems}"
                          RowBackground="#000000"
                          AlternatingRowBackground="#0a0a0a"
                          Height="Auto"
                          AutoGenerateColumns="False">
                    <DataGrid.ContextMenu>
                        <ContextMenu Style="{StaticResource VortexDataGridContextMenuStyle}">
                            <MenuItem Header="{DynamicResource CopyValue}" Click="CopyValue_Click"/>
                            <MenuItem Header="{DynamicResource CopyRow}" Click="CopyRow_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{DynamicResource Property}" Binding="{Binding Property}" Width="200"/>
                        <DataGridTextColumn Header="{DynamicResource Value}" Binding="{Binding Value}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>

        <!-- Bottom Section: Tampering Checks (Full Width) -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="{DynamicResource TamperingChecks}" 
                       FontSize="18" 
                       FontWeight="Bold"
                       Foreground="White"
                       FontFamily="Consolas"
                       Margin="0,0,0,8"/>
            
            <DataGrid x:Name="TamperingDataGrid"
                      Style="{StaticResource VortexDataGridStyle}"
                      ItemsSource="{Binding TamperingItems}"
                      RowBackground="#000000"
                      AlternatingRowBackground="#0a0a0a"
                      Height="Auto"
                      AutoGenerateColumns="False">
                <DataGrid.ContextMenu>
                    <ContextMenu Style="{StaticResource VortexDataGridContextMenuStyle}">
                        <MenuItem Header="{DynamicResource CopyValue}" Click="CopyValue_Click"/>
                        <MenuItem Header="{DynamicResource CopyRow}" Click="CopyRow_Click"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{DynamicResource Property}" Binding="{Binding Property}" Width="250"/>
                    <DataGridTextColumn Header="{DynamicResource Value}" Binding="{Binding Value}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
    </Border>
</Page>