<Page x:Class="Vortex.UI.Views.WelcomeView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="Welcome"
  Background="Transparent">

<Page.Resources>
    <!-- Start Trace Button Style -->
    <Style x:Key="StartTraceButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#000000"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Width" Value="150"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5"
                            Width="{TemplateBinding Width}" 
                            Height="{TemplateBinding Height}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#1A1A1A"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="#808080"/>
                            <Setter Property="BorderBrush" Value="#808080"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</Page.Resources>

<Border Background="#000000" CornerRadius="0,0,8,8">
    <Grid x:Name="MainGrid">
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <!-- Logo -->
            <Image x:Name="WelcomeLogoImage"
                   Source="/Assets/VortexWhiteLogo.png" 
                   Width="200" 
                   Height="200"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"
                   RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <RotateTransform x:Name="WelcomeLogoRotation" Angle="0"/>
                </Image.RenderTransform>
            </Image>
            
            <!-- Vortex Viewer Title -->
            <TextBlock Text="Vortex Viewer"
                       Foreground="White"
                       FontFamily="Consolas"
                       FontSize="24"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            
            <!-- Start Trace Button -->
            <Button x:Name="StartTraceButton"
                    Content="Start Trace" 
                    Style="{StaticResource StartTraceButtonStyle}"
                    Click="StartTrace_Click"
                    HorizontalAlignment="Center"/>
            
            <!-- Status Text with animated dots - Fixed height container to prevent layout shift -->
            <Grid Height="30" 
                  Margin="0,20,0,0"
                  HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            x:Name="StatusPanel"
                            Visibility="Collapsed">
                    <TextBlock x:Name="StatusText"
                               Text=""
                               Foreground="White"
                               FontFamily="Consolas"
                               FontSize="14"/>
                    <TextBlock x:Name="DotsText"
                               Text=""
                               Foreground="White"
                               FontFamily="Consolas"
                               FontSize="14"
                               Margin="2,0,0,0"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
    </Border>
</Page>
